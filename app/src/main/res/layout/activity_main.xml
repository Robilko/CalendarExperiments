<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/default_padding"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.applandeo.materialcalendarview.CalendarView
            android:id="@+id/calendar_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:abbreviationsLabelsColor="@color/black"
            app:eventsEnabled="true"
            app:headerColor="#06A7B3"
            app:selectionColor="#06A7B3"
            app:selectionLabelColor="@color/black"
            app:todayLabelColor="#06A7B3"
            app:type="one_day_picker" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="2">

            <TextView
                android:layout_margin="@dimen/default_padding"
                android:drawablePadding="@dimen/default_padding"
                android:gravity="center"
                android:text="Приёмный день"
                android:textColor="#A2A3A8"
                app:drawableStartCompat="@drawable/calendar_event_entry_day" />

            <TextView
                android:layout_margin="@dimen/default_padding"
                android:drawablePadding="@dimen/default_padding"
                android:gravity="center"
                android:text="Есть запись"
                android:textColor="#A2A3A8"
                app:drawableStartCompat="@drawable/calendar_event_free_entry" />

            <TextView
                android:layout_margin="@dimen/default_padding"
                android:drawablePadding="@dimen/default_padding"
                android:gravity="center"
                android:text="Весь день расписан"
                android:textColor="#A2A3A8"
                app:drawableStartCompat="@drawable/calendar_event_full_entry" />

        </GridLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginVertical="@dimen/default_padding"
            android:background="#A2A3A8" />
    </LinearLayout>


</ScrollView>